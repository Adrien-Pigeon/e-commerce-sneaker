{% if pages > 1 %}
	<nav>
		<ul
			class="pagination">

			<!-- Flèche Précédent -->
			{% if currentPage > 1 %}

				<li class="page-item">
					<a href="{{ path(path, {slug: slug, page: currentPage - 1} ) }}" class="page-link">&lt;</a>
				</li>

			{% else %}

				<!--On désactive la flèche précédent si on est en page 1 -->
				<li class="page-item disabled">
					<a class="page-link">&lt;</a>
				</li>

			{% endif %}


			<!-- Numéro de page -->
			{% for page in 1..pages %}
                <!-- Si ma page est égale à la page actuelle alors il prend "active" sinon rien -->
				<li class="page-item {{ (page == currentPage) ? 'active' : '' }}">
					<a href="{{ path(path, {slug: slug, page: page} ) }}" class="page-link">{{ page }}</a>
				</li>
			{% endfor %}

			<!-- Flèche Suivant -->
			{% if currentPage < pages %}

				<li class="page-item">
					<a href="{{ path(path, {slug: slug, page: currentPage + 1} ) }}" class="page-link">&gt;</a>
				</li>

			{% else %}
                <!--On désactive la flèche Suivant si on est sur la dernière page -->
				<li class="page-item disabled">
					<a class="page-link">&gt;</a>
				</li>

			{% endif %}


		</ul>
	</nav>

{% endif %}
