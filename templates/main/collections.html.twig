{% extends 'base.html.twig' %}

{% block title %}Collections
{% endblock %}


{% block body %}
	<link href="{{ asset('assets/styles/collections.css')}}" rel="stylesheet">

	<main class="container">
		<section class="row">

			<div class="col-12 mt-5 mb-5">
				<h1>Collections</h1>
			</div>


			<div class="col-6 flex mt-5">

				{# Boucle sur les cat√©gories et les affichent #}
				{% for category in categories %}
					{% if category.parent == null %}
						<div class="title-category">
							<h2>
								Gamme {{ category.name }}</h2>
						</div>

					{% else %}
						<div class="category">
							<ul>
								<li><a href="{{path('app_categories_list',{slug:category.slug})}}">{{ category.name}}</a></li>
							</ul>


						</div>
					{% endif %}


				{% endfor %}
			</div>


			<div class="col-6 flex2">
				<img src="{{asset('assets/img/img-collections.png') }}" alt="image collections">
			</div>
		</section>
	</main>
{% endblock %}
