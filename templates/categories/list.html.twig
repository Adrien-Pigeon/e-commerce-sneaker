{% extends 'base.html.twig' %}

{% block title %}Listes "{{ category.name }}"
{% endblock %}

{% block body %}
	<link href="{{ asset('assets/styles/product.css') }}" rel="stylesheet"/>
	

	<main class="container page-style">
		<section class="row">
			<div class="col-12">
				<h1>Liste des produits de la catégorie "{{ category.name }}"</h1>
			</div>


			{# On boucle sur les produits #}
			{% for product in products.data %}
				<div class="col-3 mb-3">
					<article class="card h-100">
						<img src="{{ asset('assets/img/products/mini/300x300-' ~ product.images[0].name ) }}" class="card-img-top" alt="{{ product.name }}">
						<div class="card-body">
							<h2 class="card-title">{{ product.name }}</h2>
							<p class="card-text price">{{ product.price / 100}} $</p>
							<div class="buttonsall">
							<a href="{{ path('app_products_details', {"slug": product.slug }) }}" class="offset">Voir les détails</a>
							</div>
						</div>
					</article>
				</div>
			{% endfor %}

			{% set path = 'app_categories_list' %}
			{% set slug = category.slug %}
			{% set pages = products.pages %}
			{% set currentPage = products.page %}
			{% include "_partials/_pagination.html.twig" %}

		</section>
	</main>
{% endblock %}
